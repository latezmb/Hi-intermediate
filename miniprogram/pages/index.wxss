/* miniprogram/pages/index.wxss */
.page {
    background:linear-gradient(180deg,rgba(31,41,56,0.45) 0%,rgba(28,37,50,0.7) 77%,rgba(28,37,50,1) 100%);
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100vh;
}
.page-o {
    background:linear-gradient(180deg,rgba(137,91,26) 0%,rgba(104,74,32) 77%,rgba(28,37,50,1) 100%);
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100vh;
}
/*
    上传按钮
*/
.upload {
    background: #3172EE;
    width: 100%;
    height: 186rpx;
    position: absolute;
    bottom: 0rpx;
    display: flex;
    flex-direction: row;
    margin-top: 34rpx;
}
.upload image {
    width: 54rpx;
    height: 42rpx;
    margin-left: 294rpx;
    margin-top: 34rpx;
}
.upload text {
    display: block;
    margin-left: 24rpx;
    margin-top: 30rpx;
    color: #FFFFFF;
    font-size: 18px;
    letter-spacing: 2.57px;
}
/*
    内容，上传前图片样式
*/
.toast {
    font-size:14px;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:21px;
    margin-top: 34rpx;
   text-align: center;
}
.selectImg {
    width: 600rpx;
    height: 600rpx;
    margin: 72rpx 0rpx 0rpx 74rpx ;
}
.resultImg {
    margin-left: 54rpx;
    margin-top: 34rpx;
    display: flex;
    flex-direction: row;
}
.resultImg image {
    width: 120rpx;
    height: 120rpx;
    background: white;
    margin-left: 20rpx;
}
.border-green {
    border: green solid 1.5px;
}
.border-select {
    border: #DF489E solid 1.5px;
}